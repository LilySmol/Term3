@using TErm.Models
@model ProjectModel
@{
    ViewBag.Title = "Проекты";
}

@if (Model.issuesList == null)
{
<div>
    @using (Html.BeginForm("Projects", "Project", FormMethod.Post))
    {
        <table>
            <tr>
                <td>
                    Проекты:
                </td>
                <td>
                    @Html.DropDownListFor(m => m.name, Model.projectsList, "Выбрать проект")
                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <input type="submit" value="Открыть" style="border-radius:5px; color: #000000; background-color: #bdbdbd; width: 172px; height: 30px;"/>
                </td>
            </tr>
        </table>
    }
    @using (Html.BeginForm("Projects", "Project", FormMethod.Post))
    {
        <input type="submit" value="Обновить проекты" style="border-radius:5px; color: #000000; background-color: #bdbdbd; width: 172px; height: 30px;"/>
    }
</div>
}
else
{ 
<div>  
    @using (Html.BeginForm("Projects", "Project", FormMethod.Post))
    {
        <input type="submit" value="Оценить" style="border-radius:5px; color: #000000; background-color: #bdbdbd; width: 172px; height: 30px;"/>   
    }
    <table>
        <tr>
            <th>Название</th>
            <th>Описание</th>
            <th>Оценочное время</th>
            <th>Потраченное время</th>
        </tr>
                @foreach (IssuesModel issue in Model.issuesList)
                {
                <tr>
                    <td>@issue.title</td>
                    <td>@issue.description</td>
                    <td>@issue.time_stats.time_estimate</td>
                    <td>@issue.time_stats.total_time_spent</td>
                </tr>
                }          
    </table>    
</div>
}